<%= stylesheet_link_tag "books_form", "data-turbo-track": "reload" %>

<h1><%= @book.new_record? ? 'Add New Book' : 'Edit Book' %></h1>

<%= form_with model: @book, local: true, multipart: true, html: { class: "book-form" } do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation" class="error-explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :author, class: "form-label" %>
    <%= f.text_field :author, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cover_image, class: "form-label" %>
    <%= f.file_field :cover_image, class: "form-control-file" %>
  </div>

  <div class="form-group">
    <%= f.label :file_path, "Book File (PDF)", class: "form-label" %>
    <%= f.file_field :file_path, class: "form-control-file" %>
  </div>

  <div class="form-group">
    <%= f.label :price, class: "form-label" %>
    <%= f.number_field :price, step: 0.01, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
